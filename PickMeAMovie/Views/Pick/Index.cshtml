@model PickMeAMovie.Models.Movie

@{
    ViewBag.Title = @Model.Details.Title;
}

<!-- Page Content -->
<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">@Model.Details.Title <small>(@Model.Year)</small></h1>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-3">
            <img class="img-fluid" src="@Model.Details.Poster" alt="">
        </div>

        <div class="col-md-9">
            <div class="card">
                    <div class="card-header">
                        <h1 class="card-title"><i class="fas fa-film"> Details </i> </h1>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-2">Plot:</dt>
                            <dd class="col-sm-10">@Model.Details.Plot</dd>
                            <dt class="col-sm-2">Genre:</dt>
                            <dd class="col-sm-10">@Model.Details.Genre</dd>
                            <dt class="col-sm-2">Director:</dt>
                            <dd class="col-sm-10">@Model.Details.Director</dd>
                            <dt class="col-sm-2">Writers:</dt>
                            <dd class="col-sm-10">@Model.Details.Writer</dd>
                            <dt class="col-sm-2">Actors:</dt>
                            <dd class="col-sm-10">@Model.Details.Actors</dd>
                            <dt class="col-sm-2">Runtime:</dt>
                            <dd class="col-sm-10">@Model.Details.Runtime</dd>
                            <dt class="col-sm-2">Language:</dt>
                            <dd class="col-sm-10">@Model.Details.Language</dd>
                        </dl>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->


            <hr />
            
                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title"><i class="fas fa-star"> Rating </i> </h1>
                    </div>
              <!-- /.card-header -->
              <div class="card-body p-0">
                <table class="table table-striped">
                  <thead>
                  <tr>
                      <th></th>
                      <th>Source</th>
                      <th>Value</th>
                  </tr>
                  </thead>
                  <tbody>
                  @foreach (var item in @Model.Details.Ratings)
                  {
                      <tr>
                          <td><div><img src="~/Content/img/@item.Img" alt=""></div></td>
                          <td>@item.Source</td>
                          <td>@item.Value</td>
                      </tr>
                  }
                </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>

        </div>

    </div>
    <!-- /.row -->
    <!-- /.row -->
    <script>
        const navBar = document.getElementById("mainNav");
        navBar.removeAttribute("class");
        navBar.classList.add("navbar","navbar-expand-lg", "bg-secondary", "text-uppercase","navbar-shrink");
    </script>
</div>
<!-- /.container -->